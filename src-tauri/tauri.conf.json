{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Hyperion Controller",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "removeFile": true,
        "createDir": true,
        "scope": ["%APP_DATA%/hyperion-controller"]
      },
      "dialog": {
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ca.helios5009.dev",
      "icon": [
        "icons/16x16.png",
        "icons/32x32.png",
        "icons/150x150.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Hyperion Controller",
        "width": 1080,
        "height": 720,
        "minHeight": 700,
        "minWidth": 800
      }
    ]
  }
}
